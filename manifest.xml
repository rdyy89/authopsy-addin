<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  <Id>e7b8c9a1-4f3d-4c2a-9b8e-123456789abc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>rdyy89</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Authopsy" />
  <Description DefaultValue="Analyze email authentication headers for DMARC, DKIM, and SPF." />
  <IconUrl DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy.png" />
  <HighResolutionIconUrl DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy@2x.png" />
  <SupportUrl DefaultValue="https://github.com/rdyy89/authopsy-addin/issues" />
  <AppDomains>
    <AppDomain DefaultValue="https://rdyy89.github.io/authopsy-addin/" />
  </AppDomains>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>
  <Hosts>
    <Host xsi:type="MailHost">
      <DesktopFormFactor>
        <ExtensionPoint xsi:type="MessageReadCommandSurface">
          <SupportsPinning>true</SupportsPinning>
          <OfficeTab id="TabDefault">
            <Group id="msgReadGroup">
              <Label DefaultValue="Authopsy Tools" />
              <Control xsi:type="Menu" id="msgReadMenuButton">
                <Label DefaultValue="Authopsy" />
                <Supertip>
                  <Title DefaultValue="Authopsy Email Analysis" />
                  <Description DefaultValue="Analyze email headers for authentication status." />
                </Supertip>
                <Icon>
                  <bt:Image size="16" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-16.png" />
                  <bt:Image size="32" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-32.png" />
                  <bt:Image size="80" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-80.png" />
                </Icon>
                <Items>
                  <Item id="dmarcItem">
                    <Label DefaultValue="DMARC" />
                    <Supertip>
                      <Title DefaultValue="DMARC Analysis" />
                      <Description DefaultValue="View DMARC authentication details." />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-16.png" />
                      <bt:Image size="32" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-32.png" />
                      <bt:Image size="80" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-80.png" />
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>showDmarcDetails</FunctionName>
                    </Action>
                  </Item>
                  <Item id="dkimItem">
                    <Label DefaultValue="DKIM" />
                    <Supertip>
                      <Title DefaultValue="DKIM Analysis" />
                      <Description DefaultValue="View DKIM signature verification details." />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-16.png" />
                      <bt:Image size="32" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-32.png" />
                      <bt:Image size="80" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-80.png" />
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>showDkimDetails</FunctionName>
                    </Action>
                  </Item>
                  <Item id="spfItem">
                    <Label DefaultValue="SPF" />
                    <Supertip>
                      <Title DefaultValue="SPF Analysis" />
                      <Description DefaultValue="View SPF authentication details." />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-16.png" />
                      <bt:Image size="32" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-32.png" />
                      <bt:Image size="80" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy-80.png" />
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>showSpfDetails</FunctionName>
                    </Action>
                  </Item>
                </Items>
              </Control>
            </Group>
          </OfficeTab>
        </ExtensionPoint>
      </DesktopFormFactor>
    </Host>
  </Hosts>
</OfficeApp>