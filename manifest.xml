<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">

  <!-- Begin Basic Settings: Add-in metadata -->
  <Id>a13c4ac8-f7c4-4c65-8f4a-2a1b8c7e9f0d</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Authopsy</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Authopsy"/>
  <Description DefaultValue="Email authentication analyzer for DMARC, DKIM, and SPF"/>
  <IconUrl DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy.png"/>
  <HighResolutionIconUrl DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy.png"/>
  <SupportUrl DefaultValue="https://github.com/rdyy89/authopsy-addin"/>

  <!-- Hosts -->
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <!-- Form Settings -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://rdyy89.github.io/authopsy-addin/taskpane.html"/>
        <RequestedHeight>350</RequestedHeight>
      </DesktopSettings>
      <TabletSettings>
        <SourceLocation DefaultValue="https://rdyy89.github.io/authopsy-addin/taskpane.html"/>
        <RequestedHeight>350</RequestedHeight>
      </TabletSettings>
      <PhoneSettings>
        <SourceLocation DefaultValue="https://rdyy89.github.io/authopsy-addin/taskpane.html"/>
        <RequestedHeight>350</RequestedHeight>
      </PhoneSettings>
    </Form>
  </FormSettings>

  <!-- Permissions -->
  <Permissions>ReadItem</Permissions>

  <!-- Rule -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="ReadOrEdit" />
    <Rule xsi:type="ItemHasAttachment" />
    <Rule xsi:type="ItemHasRegularExpressionMatch" RegExName="HeaderCheck" RegExValue=".*" PropertyName="InternetHeaders" />
  </Rule>

  <!-- Regular expressions for rules -->
  <RegExCollection>
    <RegEx Name="HeaderCheck" Value="." IgnoreCase="true" />
  </RegExCollection>

  <!-- VERSION OVERRIDES - ADD DROPDOWN MENU -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets>
        <bt:Set Name="Mailbox" MinVersion="1.3" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <!-- Message Read -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Menu" id="msgReadMenuButton">
                  <Label resid="MenuButtonLabel" />
                  <Supertip>
                    <Title resid="MenuSuperTipTitle" />
                    <Description resid="MenuSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Items>
                    <Item id="dmarcItem">
                      <Label resid="DmarcLabel" />
                      <Supertip>
                        <Title resid="DmarcSuperTipTitle" />
                        <Description resid="DmarcSuperTipDesc" />
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon.16x16" />
                        <bt:Image size="32" resid="Icon.32x32" />
                        <bt:Image size="80" resid="Icon.80x80" />
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>showDmarcDetails</FunctionName>
                      </Action>
                    </Item>
                    <Item id="dkimItem">
                      <Label resid="DkimLabel" />
                      <Supertip>
                        <Title resid="DkimSuperTipTitle" />
                        <Description resid="DkimSuperTipDesc" />
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon.16x16" />
                        <bt:Image size="32" resid="Icon.32x32" />
                        <bt:Image size="80" resid="Icon.80x80" />
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>showDkimDetails</FunctionName>
                      </Action>
                    </Item>
                    <Item id="spfItem">
                      <Label resid="SpfLabel" />
                      <Supertip>
                        <Title resid="SpfSuperTipTitle" />
                        <Description resid="SpfSuperTipDesc" />
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon.16x16" />
                        <bt:Image size="32" resid="Icon.32x32" />
                        <bt:Image size="80" resid="Icon.80x80" />
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>showSpfDetails</FunctionName>
                      </Action>
                    </Item>
                  </Items>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://rdyy89.github.io/authopsy-addin/icons/authopsy.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://rdyy89.github.io/authopsy-addin/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://rdyy89.github.io/authopsy-addin/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Authopsy"/>
        <bt:String id="MenuButtonLabel" DefaultValue="Authopsy"/>
        <bt:String id="MenuSuperTipTitle" DefaultValue="Authopsy"/>
        <bt:String id="DmarcLabel" DefaultValue="DMARC: Loading..."/>
        <bt:String id="DmarcSuperTipTitle" DefaultValue="DMARC Authentication"/>
        <bt:String id="DkimLabel" DefaultValue="DKIM: Loading..."/>
        <bt:String id="DkimSuperTipTitle" DefaultValue="DKIM Authentication"/>
        <bt:String id="SpfLabel" DefaultValue="SPF: Loading..."/>
        <bt:String id="SpfSuperTipTitle" DefaultValue="SPF Authentication"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="MenuSuperTipDescription" DefaultValue="Check email authentication status including DMARC, DKIM, and SPF."/>
        <bt:String id="DmarcSuperTipDesc" DefaultValue="View DMARC authentication details for this email."/>
        <bt:String id="DkimSuperTipDesc" DefaultValue="View DKIM authentication details for this email."/>
        <bt:String id="SpfSuperTipDesc" DefaultValue="View SPF authentication details for this email."/>
      </bt:LongStrings>
    </Resources>

    <!-- Function command add-in integration -->
    <FunctionFile resid="Commands.Url"/>
  </VersionOverrides>
</OfficeApp>