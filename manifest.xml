<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">

  <Id>YOUR-ADDIN-ID</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Provider Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName resid="DisplayName" />
  <Description resid="Description" />
  <IconUrl>https://yourdomain.com/path/to/icon.png</IconUrl>
  <HighResolutionIconUrl>https://yourdomain.com/path/to/icon@2x.png</HighResolutionIconUrl>
  <SupportUrl>https://yourdomain.com/support</SupportUrl>
  <AppDomains>
    <AppDomain>https://yourdomain.com</AppDomain>
  </AppDomains>
  <Permissions>ReadWriteMailbox</Permissions>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <SupportsPinning>true</SupportsPinning>
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Menu" id="msgReadMenuButton">
                  <Label resid="MenuButtonLabel" />
                  <Supertip>
                    <Title resid="MenuSuperTipTitle" />
                    <Description resid="MenuSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Items>
                    <Item id="dmarcItem">
                      <Label resid="DmarcLabel" />
                      <Supertip>
                        <Title resid="DmarcSuperTipTitle" />
                        <Description resid="DmarcSuperTipDesc" />
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon.16x16" />
                        <bt:Image size="32" resid="Icon.32x32" />
                        <bt:Image size="80" resid="Icon.80x80" />
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>showDmarcDetails</FunctionName>
                      </Action>
                    </Item>
                    <Item id="dkimItem">
                      <Label resid="DkimLabel" />
                      <Supertip>
                        <Title resid="DkimSuperTipTitle" />
                        <Description resid="DkimSuperTipDesc" />
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon.16x16" />
                        <bt:Image size="32" resid="Icon.32x32" />
                        <bt:Image size="80" resid="Icon.80x80" />
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>showDkimDetails</FunctionName>
                      </Action>
                    </Item>
                    <Item id="spfItem">
                      <Label resid="SpfLabel" />
                      <Supertip>
                        <Title resid="SpfSuperTipTitle" />
                        <Description resid="SpfSuperTipDesc" />
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon.16x16" />
                        <bt:Image size="32" resid="Icon.32x32" />
                        <bt:Image size="80" resid="Icon.80x80" />
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>showSpfDetails</FunctionName>
                      </Action>
                    </Item>
                  </Items>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://yourdomain.com/path/to/icon-16.png" />
        <bt:Image id="Icon.32x32" DefaultValue="https://yourdomain.com/path/to/icon-32.png" />
        <bt:Image id="Icon.80x80" DefaultValue="https://yourdomain.com/path/to/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="apiUrl" DefaultValue="https://yourdomain.com/api/" />
      </bt:Urls>
    </Resources>
  </VersionOverrides>
</OfficeApp>